<div id="">
  <%= turbo_frame_tag 'search' do %>

    <p>
      <% if params[:query].present? %>
        <%= "Total de resultados: #{users.all.count}" %>
      <% end %>
    </p>

    <table class="table  table-bordered">
      <thead class="table-dark">
        <tr>
          <th scope="col"><strong>ID</strong></th>
          <th scope="col"><strong>Name</strong></th>
          <th scope="col"><strong>Address</strong></th>
          <th scope="col"><strong>Phrase</strong></th>
          <th scope="col"><strong>Ranking</strong></th>
          <th scope="col"><strong>Spell</strong></th>
        </tr>
      </thead>

      <% users.each do |user| %>
        <tbody>
          <tr>
            <th scope="row"><%= user.id %></th>
            <td><%= user.name %></td>
            <td><%= user.address %></td>
            <td><%= user.phrase %></td>
            <td><%= user.ranking %></td>
            <td><%= user.spell %></td>
          </tr>
        </tbody>
      <% end %>

    </table>
  <% end %>
</div>
